<% content_for :content do %>
  <section>
    <div class="container">
        <p>
        <strong>Type:</strong>
        <%= @entity.value_type %>
      </p>
        <p>
        <strong>Value:</strong>
        <%= @entity.value %>
      </p>
        <p>
        <strong>Chunk:</strong>
        <%= link_to(@entity.chunk.content.truncate(60), chunks_path(@entity.chunk)) %>
      </p>
  
      <%= link_to 'Back', entities_path, class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_entity_path(@entity), class: 'btn btn-primary' %>
    </div>
  </section>
<% end %>
